@model MenuRestaurante_RaulGonzalez.Models.MenuItem

@{
    ViewData["Title"] = "Eliminar plato";
    string bucketUrl = "https://restaurant-menu-images-0001.s3.amazonaws.com";
}

<h2 class="text-center mb-4 text-danger"><i class="bi bi-trash3-fill me-2"></i>Confirmar eliminación</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-danger">
            @if (!string.IsNullOrEmpty(Model.ImageKey))
            {
                <img src="@($"{bucketUrl}/{Model.ImageKey}")"
                     class="card-img-top"
                     style="object-fit: cover; height: 200px;"
                     alt="@Model.Name" />
            }

            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                <p class="card-text text-muted">@Model.Description</p>
                <div class="d-flex justify-content-between">
                    <span class="badge bg-secondary">@Model.Category</span>
                    <span class="fw-bold text-success">€@Model.Price</span>
                </div>
            </div>

            <div class="card-footer bg-white border-top-0">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="ItemId" />

                    <div class="alert alert-warning text-center mt-3" role="alert">
                        ¿Estás seguro de que deseas eliminar este plato?
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash3 me-1"></i> Eliminar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
