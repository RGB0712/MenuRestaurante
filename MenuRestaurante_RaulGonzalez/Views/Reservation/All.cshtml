@model List<MenuRestaurante_RaulGonzalez.Models.Reservation>

@{
    ViewData["Title"] = "All Reservations (Admin)";
}

<h2>All Reservations</h2>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <label for="startDate" class="form-label">Start Date</label>
        <input type="date" name="startDate" id="startDate" class="form-control" value="@ViewBag.StartDate" />
    </div>
    <div class="col-md-3">
        <label for="endDate" class="form-label">End Date</label>
        <input type="date" name="endDate" id="endDate" class="form-control" value="@ViewBag.EndDate" />
    </div>
    <div class="col-md-3 align-self-end">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a asp-action="All" class="btn btn-secondary">Clear</a>
    </div>
</form>

@if (Model == null || !Model.Any())
{
    <p>No reservations found for the selected range.</p>
}
else
{
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>User ID</th>
                <th>Date and Time</th>
                <th>People</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.UserId</td>
                    <td>@reservation.DateOfReservation.ToString("f")</td>
                    <td>@reservation.NumberOfPeople</td>
                    <td>@reservation.Notes</td>
                </tr>
            }
        </tbody>
    </table>
}